 <% if (title) { %>
    <!-- If a title is provided, display an h1 heading with the title -->
    <h1 class="managementTitle"><%= title %></h1>
    <% } else { // If no title is provided, redirect to the home page
    res.redirect('/'); } %>
    
    <!-- ***************************
     *  A Message Block
     * ************************** -->
    <% messages() %>
<p>Field is required</p>
<!-- DO NOT CHANGE THE ACTION IT IS FINALLY WORKING -->
<form action="/inv/addClassification" method="post"> 
    <label for="classification_name">Classification Name</label>
    <p>NAME MUST BE ALPHABETIC CHARACTERS ONLY.</p>
    <input 
    type="text" 
    name="classification_name" 
    id="classification_name" 
    pattern="[a-zA-Z]+" 
    title="Please enter only alphabetic characters."
    required>
    <br>
    <button class="registrationbtn" type="submit">Register</button>
</form>