<!-- ***************************
 *  The Content Heading Assignment 3 Error handling
 * ************************** -->
<% if (title) { %>
<!-- If a title is provided, display an h1 heading with the title -->
<h1><%= title %></h1>
<div class="errorMessage">
<h2><%- message %></h2>
</div>
<% } else { // If no title is provided, redirect to the home page
res.redirect('/'); } %>


